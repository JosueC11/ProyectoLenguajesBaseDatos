@{
    ViewData["Title"] = "Historial";
}

<div class="d-flex flex-column align-items-center mt-5 mb-3">
    <h1>Su Historial de Noticias</h1>
    <h3 class="mt-5 mb-4">Puede filtrar por noticias comentadas, calificadas y compartidas</h3>
</div>
<div class="d-flex flex-row justify-content-center gap mb-5">
    <a class="btn btn-warning"><i class="bi bi-filter-circle"></i> Noticia Calificadas</a>
    <a class="btn btn-warning"><i class="bi bi-filter-circle"></i> Noticia Comentadas</a>
    <a class="btn btn-warning"><i class="bi bi-filter-circle"></i> Noticia Compartidas</a>
</div>
<div class="d-flex flex-column align-items-center mt-4 mb-4">
    <div class="d-flex flex-wrap gap mb-5">
        @for (var i = 0; i < 3; i++)
        {
            <div class="card" style="width: 18rem;">
                <img src="https://i.ytimg.com/vi/LtltiTYHW3E/maxresdefault.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <div class="d-flex gap">
                        <a href="#" class="btn btn-warning">Ver Noticia</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

