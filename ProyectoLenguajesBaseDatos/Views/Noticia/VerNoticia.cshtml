@model Noticia
@{
    ViewData["Title"] = "VerNoticia";
}

<div class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column align-items-center">
        <h1 class="mt-5 mb-4">Noticia</h1>
    </div>
    <div class="d-flex flex-wrap align-items-center gap mb-5">
        <div class="card shadow-lg" style="width: 450px;">
            <img src="/img/noticia.png" class="card-img-top" alt="...">
            <div class="d-flex flex-column card-body">
                <div class="d-flex flex-row gap">
                    <h4 class="card-text">@Model.Tema.Titulo</h4>
                    <h4 class="card-text">@Model.SubTema.Titulo</h4>
                </div>
                <br />
                <h5 class="card-title">@Model.Titulo</h5>
                <br />
                <h6 class="card-title">@Model.Sinopsis</h6>
                <p class="card-text">@Model.Descripcion</p>
                <p class="card-text">@Model.CorreoUsuarioCreador</p>
                <div class="d-flex gap-3">
                    <p class="card-text">@Model.FechaPost</p>
                </div>
                <br />
                <div class="d-flex gap-3">
                    <p class="card-text">Calificación Promedio: @Model.CalificacionPromedio <i class="bi bi-star-fill"></i></p>
                </div>
                <br />
                <div class="d-flex justify-content-center gap mt-auto">
                    <a asp-controller="Noticia" asp-action="Listado" class="btn btn-warning"><i class="bi bi-skip-backward-fill"></i>
                        <br /> Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
