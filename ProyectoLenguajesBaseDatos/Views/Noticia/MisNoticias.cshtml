
@{
    ViewData["Title"] = "Mis Noticias";
}

<div>
    <div class="d-flex flex-column align-items-center">
        <h1 class="mt-5 mb-4">Noticias</h1>
    </div>
    <button class="btn btn-primary mb-4" type="button" data-bs-toggle="modal" data-bs-target="#add-noticia">
        <i class="bi bi-plus-lg"></i> Nueva Noticia
    </button>
    <div class="d-flex flex-wrap gap mb-5">
        @for (var i = 0; i < 5; i++)
        {
            <div class="card shadow-lg" style="width: 380px;">
                <img src="/img/noticia.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <div class="d-flex flex-row gap">
                        <p class="card-text">Internacionales</p>
                        <p class="card-text">América Latina</p>
                    </div>
                    <h5 class="card-title">Nueva ley en el Congreso</h5>
                    <h6 class="card-title">Se aprueba nueva ley en el Congreso</h6>
                    <p class="card-text">El Congreso ha aprobado una nueva ley que...</p>
                    <p class="card-text">18-03-2023</p>
                    <div class="d-flex gap">
                        <a href="#" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
                        <a href="#" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Modal -->
    <div class="modal fade shadow-lg" id="add-noticia" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Nueva Noticia</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="d-flex flex-column gap bg-menu-color p-4 rounded shadow-lg">
                        <div class="d-flex justify-content-end">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <div class="d-flex flex-row gap mb-1">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-filter"></i> Tema
                                </button>
                                <ul class="dropdown-menu">
                                    <li><button class="dropdown-item" type="button">1</button></li>
                                    <li><button class="dropdown-item" type="button">2</button></li>
                                    <li><button class="dropdown-item" type="button">3</button></li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-filter"></i> SubTema
                                </button>
                                <ul class="dropdown-menu">
                                    <li><button class="dropdown-item" type="button">1</button></li>
                                    <li><button class="dropdown-item" type="button">2</button></li>
                                    <li><button class="dropdown-item" type="button">3</button></li>
                                </ul>
                            </div>
                        </div>
                        <div class="d-flex justify-content-around flex-row gap">
                            <div class="d-flex justify-content-around flex-column">
                                <label for="inputTitulo" class="form-label">Titulo</label>
                                <input type="text" class="form-control" id="inputTitulo" placeholder="Titulo Noticia">
                            </div>
                            <div class="d-flex justify-content-around flex-column">
                                <label for="inputSinopsis" class="form-label">Sinopsis</label>
                                <input type="text" class="form-control" id="inputSinopsis" placeholder="Sinopsis Noticia">
                            </div>
                        </div>
                        <div class="flex-row">
                            <label for="inputDescripcion" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="inputDescripcion" placeholder="Descripción Noticia">
                        </div>
                        <div class="flex-row">
                            <label for="inputFecha" class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="inputFecha" placeholder="Fecha">
                        </div>
                    </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
                    <button type="button" class="btn btn-success">Agregar</button>
                </div>
            </div>
        </div>
    </div>
</div>

