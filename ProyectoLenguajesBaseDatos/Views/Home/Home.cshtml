@model List<Noticia>
@{
    ViewData["Title"] = "Home";
}

<div class="d-flex flex-column align-items-center mt-5 mb-4">
    <h1>Bienvenido al Portal de Noticias</h1>
    <h3 class="mt-4 mb-5" >Vea las noticias agregadas últimamente</h3>
    <div>
        <form asp-controller="Home" asp-action="FiltrarPalabra" method="post">
            <div class="d-flex flex-row gap mb-5">
                <div class="d-flex align-items-center">
                    <div class="me-2">
                        <label for="calificacion">Filtrar Titulo:</label>
                    </div>
                    <div class="me-2">
                        <input type="text" class="form-control" name="filtro" required />
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>     
                <div>
                    <a class="btn btn-secondary" asp-controller="Home" asp-action="Home">Quitar filtro</a>
                </div>
            </div>          
        </form>
    </div>
    <div class="d-flex flex-wrap gap mb-5">
        @foreach (var noticia in Model)
        {
            <div class="card shadow-lg" style="width: 18rem;">
                <img src="/img/noticia.png" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex flex-row gap">
                        <p class="card-text">@noticia.Tema.Titulo</p>
                        <p class="card-text">@noticia.SubTema.Titulo</p>
                    </div>
                    <h5 class="card-title">@noticia.Titulo</h5>
                    <h6 class="card-title">@noticia.Sinopsis</h6>
                    <p class="card-text">@noticia.Descripcion</p>
                    <p class="card-text">@noticia.FechaPost</p>
                    <div class="d-flex justify-content-center gap mt-auto">
                        <a class="btn btn-warning" asp-controller="Noticia" asp-action="VerNoticia" asp-route-idNoticia="@noticia.IdNoticia">
                            <i class="bi bi-eye-fill"></i> Ver Noticia
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

