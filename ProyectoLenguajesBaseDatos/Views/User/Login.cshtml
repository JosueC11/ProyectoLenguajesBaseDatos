@model int

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column align-items-center mt-5 mb-3">
    <h3 class="mt-5 mb-5">Ingresa al portal de noticias para publicar y compartir sus noticias favoritas</h3>
    <form asp-controller="User" asp-action="SetLogin" method="post" class="d-flex flex-column gap bg-menu-color p-4 rounded shadow-lg">
        <div class="d-flex justify-content-end">
            <i class="bi bi-box-arrow-in-right"></i>
        </div>
        <div class="flex-row">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Correo" required>
        </div> 
        <div class="flex-row">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Contraseña" required>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">Iniciar Sesión</button>
        </div>
        @if(Model == 0)
        {
            <div class="d-flex justify-content-center">
                <label for="credenciales" class="form-label text-danger">Credenciales incorrectas!</label>
            </div>
        }
    </form>
</div>

